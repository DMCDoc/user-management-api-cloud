+version: '3.8'
+services:
+  db:
+    image: postgres:15
+    environment:
+      POSTGRES_DB: ${POSTGRES_DB:usermgmt}
+      POSTGRES_USER: ${POSTGRES_USER:usermgmt}
+      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:usermgmt_pass}
+    ports:
+      - "${POSTGRES_PORT:5432}:5432"
+    healthcheck:
+      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER:usermgmt} -d ${POSTGRES_DB:usermgmt}"]
+      interval: 10s
+      timeout: 5s
+      retries: 5
+    volumes:
+      - pgdata:/var/lib/postgresql/data
+volumes:
+  pgdata:
+    driver: local
