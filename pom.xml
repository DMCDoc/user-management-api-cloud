<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.example</groupId>
  <artifactId>user-management-api-cloud</artifactId>
  <version>1.0</version>
  <packaging>pom</packaging>
  <name>User Management application API Cloud</name>

  <description>Projet multi-modules backend Spring + frontend JavaFX + modules partag√©s</description>

  <modules>
    <module>shared_common</module>
    <module>backend/usermanagement</module>
    <module>frontend/user-client-javafx</module>
    
  </modules>

  <properties>
    <java.version>17</java.version>
    <spring.boot.version>3.1.6</spring.boot.version>
    <jjwt.version>0.11.5</jjwt.version>
    <jackson.version>2.15.3</jackson.version>
    <javafx.version>17.0.2</javafx.version>
    <javafx-maven-plugin.version>0.0.8</javafx-maven-plugin.version>
    <openjfx.version>17.0.2</openjfx.version>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    <spring-boot-maven-plugin.version>3.1.6</spring-boot-maven-plugin.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <mysql-connector-j.version>8.0.33</mysql-connector-j.version>
    <io.jsonwebtoken.version>0.11.5</io.jsonwebtoken.version>
    <io.jsonwebtoken.jackson.version>0.11.5</io.jsonwebtoken.jackson.version>
    <io.github.cdimascio.dotenv-java.version>6.2.2</io.github.cdimascio.dotenv-java.version>
    <jakarta.validation.version>3.0.2</jakarta.validation.version>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <version>3.1.6</version>
        <configuration>
          <mainClass>com.example.usermanagement.UserManagementApplication</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>${spring.boot.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <repositories>
    <repository>
        <id>openjfx-monorepo</id>
        <url>https://repo.maven.apache.org/maven2</url>
    </repository>
</repositories>

</project>
