<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.client.controller.RegisterController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f0f0f0;">
    <Label text="Inscription utilisateur" style="-fx-font-size: 18px;" />
    <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
    <PasswordField fx:id="passwordField" promptText="Mot de passe" />
    <TextField fx:id="emailField" promptText="Email" />
    <Button text="S'inscrire" onAction="#handleRegister"/>
    <Button text="← Retour à la connexion" onAction="#goToLogin"/>
    <Label fx:id="resultLabel" wrapText="true" />
</VBox>
